<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.medicament.MedicamentFormFragment"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        >

        <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_image"
            android:name="com.example.pharmcy_app.UploadImageFragment"
            android:label="@string/menu_home"
            tools:layout="@layout/fragment_upload_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/nom"
                android:layout_width="293dp"
                android:layout_height="44dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="20dp"
                android:hint="Entrer un nom"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                />
            <Spinner
                android:id="@+id/pharmacieNames"
                android:layout_width="293dp"
                android:layout_height="44dp"
                android:paddingLeft="20dp"
                android:background="@drawable/radius"
                android:layout_marginBottom="30dp"
                />
            <EditText
                android:id="@+id/stock"
                android:layout_width="293dp"
                android:layout_height="44dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="20dp"
                android:hint="Entrer un stock"
                app:tint="@android:color/black"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                android:inputType="numberDecimal"
                />
            <EditText
                android:id="@+id/prix"
                android:layout_width="293dp"
                android:layout_height="44dp"
                android:layout_marginBottom="30dp"
                android:paddingLeft="20dp"
                android:ems="20"
                android:hint="Entrer un prix"
                android:drawablePadding="10dp"
                android:background="@drawable/radius"
                app:tint="@android:color/black"
                android:inputType="numberDecimal"
                />

            <EditText
                android:id="@+id/details"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:gravity="top|left"
                android:hint="Entrer les details"
                android:inputType="textMultiLine"
                android:lines="20"
                android:minLines="5"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:background="@drawable/radius"
                />

        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBtnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/check"
        app:tint="@android:color/white"
        app:backgroundTint="@color/purple_500"

        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/loading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ProgressBar
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="@drawable/white_circle"
            android:padding="4sp"
            android:layout_gravity="center"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>